{% extends 'base.html.twig' %}


{% block body %}
<!-- Header with Background Image -->
<header class="business-header">
  <div class="container">
    <div class="row">
      <div class="col-lg-12">
        <h1 class="display-3 text-center text-white mt-4">vik.hk segédanyag portál</h1>
      </div>
    </div>
  </div>
</header>

<!-- Page Content -->
<div class="container">

  <div class="row">
    <div class="col-sm-8">
      {{ maincontent|raw }}
      <p>
        <a class="btn btn-primary btn-lg" href="{{ path('login') }}"><img src="{{ asset('img/login_sch.svg') }}" /> Jelentkezz be AuthSCH-val</a>
      </p>
    </div>
    <div class="col-sm-4">
      {{ sidebar|raw }}
    </div>
  </div>
  <!-- /.row -->

  <div class="row">
    <div class="col-sm-12">
      <h2 class="mt-4">Legújabb segédanyagok</h2>

    </div>
    {% for material in showcase %}
    <div class="col-sm-4 my-4">
      <div class="card material-card">
        <img class="card-img-top" src="{{ asset('/img/thumbnails/'~material.thumbnail) }}" alt="">
        <div class="card-body">
          <h4 class="card-title">{{material.title}}</h4>
          {% if material.metadata is not null and material.metadata != "" %}
          <p class="metadata">
            {{material.metadata}}
          </p>
          {% endif %}
          <p class="card-text">
          {{material.shortDescription}}</p>
        </div>
        <div class="card-footer">
          <a href="{{ path('material_show', { 'trtype': material.subject.training.type, 'trslug': material.subject.training.slug, 'sslug': material.subject.slug, 'slug': material.slug }) }}" class="btn btn-primary">Find Out More!</a>
        </div>
      </div>
    </div>
    {% endfor %}

  </div>
  <!-- /.row -->
</div>
<!-- /.container -->

{% endblock %}
